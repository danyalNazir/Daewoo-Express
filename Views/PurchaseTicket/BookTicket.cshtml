                        </div>
                        <div class="col-md-6 col-lg-5 col-xl-6">
                            <label class="p-2 ms-2" asp-for=Phone>Cell Number</label>
                            <input class="input-item p-3" asp-for=Phone disabled />
                        </div>
                    </div>
                    <div class="row p-2">
                        <div class="col-md-6 col-lg-5 col-xl-6">
                            <label class="p-2 ms-2" asp-for=CNIC>CNIC</label>
                            <input class="input-item p-3" asp-for=CNIC disabled />
                        </div>
                        <div class="col-md-6 col-lg-5 col-xl-6">
                            <label class="p-2 ms-2" asp-for=Fare>Fare</label>
                            <input class="input-item p-3" asp-for=Fare value=@scheduleDetails.Fare disabled />
                        </div>
                    </div>
                    <div class="row p-2">
                        <div class="col-md-6 col-lg-5 col-xl-6">
                            <label class="p-2 ms-2" asp-for=Quantity>Qty</label>
                            <input class="input-item p-3" asp-for=Quantity disabled value=0 />
                        </div>
                        <div class="col-md-6 col-lg-5 col-xl-6">
                            <label class="p-2 ms-2" asp-for=Amount>Amount</label>
