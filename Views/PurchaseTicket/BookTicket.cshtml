@using Daewoo_Web_Application.Models;
@model BookingDetails;                                           //making view stronglt typed(i.e. defining which type of data would came from this view)

@section Styles{
<link rel="stylesheet" href="~/css/BookTicket.css" />
}

@{
    ViewData["Title"] = "Book Ticket";
}


<div class="container">
    <div class="row mt-5 mb-5">
        <h1 style="text-align:center"> BOOK TICKETS</h1>
        <hr class="mb-4 mt-0 d-inline-block mx-auto"
            style="width: 100px; background: linear-gradient(to right, #3a4ed5 50%, #030a6e 120%); height: 3px" />
    </div>
    <div class="row mb-5 flex-md-column flex-wrap">
        @await Component.InvokeAsync("ScheduleDetails"); <!--View Component is used-->
    </div>
    <div class="row mt-5 mb-5">
        <h1 style="text-align:center"> SELECT SEAT</h1>
        <hr class="mb-4 mt-0 d-inline-block mx-auto"
            style="width: 100px; background: linear-gradient(to right, #3a4ed5 50%, #030a6e 120%); height: 3px" />
    </div>
